@* Default layout - May not be used as all views specify their own layout *@
@* TODO: Check if this layout is actually used. If not, consider removing it. *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce_Platform_Ass1.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce_Platform_Ass1.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E_Commerce_Platform_Ass1.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-user-shield"></i> Admin
                                </a>
                            </li>
                        }
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                                <!-- CUSTOMER -->
                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Cart"
                                       asp-action="Index">
                                        <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Order"
                                       asp-action="History">
                                        <i class="fas fa-history"></i> Lịch sử đơn hàng
                                    </a>
                                </li>
                            }

                                <!-- SELLER -->
                            @if (User.IsInRole("Seller"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Products"
                                       asp-action="Index">
                                        <i class="fas fa-box"></i> Quản lý sản phẩm
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Order"
                                       asp-action="SellerOrders">
                                        <i class="fas fa-receipt"></i> Đơn hàng của shop
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">

                                    <i class="fas fa-user-circle me-1"></i>
                                                        @User.Identity!.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow"
                                    aria-labelledby="userDropdown"
                                    style="min-width: 260px;">

                                    <!-- HEADER -->
                                    <li class="px-3 py-3 text-white"
                                        style="background:#d8a39d; border-radius:6px 6px 0 0;">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle fa-2x me-2"></i>
                                            <div>
                                                <div class="fw-bold">@User.Identity!.Name</div>
                                                <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</small>
                                            </div>
                                        </div>
                                    </li>

                                    <!-- MENU -->
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-user me-2"></i>Hồ sơ của tôi
                                        </a>
                                    </li>

                                    <!-- CUSTOMER -->
                                                        @if (User.IsInRole("Customer"))
                                                        {
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="Shop"
                                                   asp-action="RegisterShop">
                                                    <i class="fas fa-store me-2"></i>Đăng ký shop
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="Order"
                                                   asp-action="History">
                                                    <i class="fas fa-history me-2"></i>Lịch sử đơn hàng
                                                </a>
                                            </li>
                                                        }

                                    <!-- SELLER -->
                                        @if (User.IsInRole("Seller"))
                                        {
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="Products"
                                                   asp-action="Index">
                                                    <i class="fas fa-box me-2"></i>Đơn hàng
                                                </a>
                                            </li>
                                        }
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-cog me-2"></i>Cài đặt
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- LOGOUT -->
                                    <li>
                                        <form asp-controller="Authentication"
                                              asp-action="Logout"
                                              method="post">
                                            <button type="submit"
                                                    class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - E_Commerce_Platform_Ass1.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
