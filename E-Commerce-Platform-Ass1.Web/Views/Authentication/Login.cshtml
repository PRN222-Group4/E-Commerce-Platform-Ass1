@model E_Commerce_Platform_Ass1.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center mb-4">
    <h2 class="font-weight-semi-bold mb-3">Đăng nhập tài khoản</h2>
    <p class="text-muted">Chào mừng bạn trở lại! Vui lòng đăng nhập vào tài khoản của bạn.</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Login" method="post" class="mt-4">
    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
    
    <div class="form-group">
        <label asp-for="Email" class="font-weight-semi-bold">
            <i class="fas fa-envelope text-primary mr-2"></i>Email
        </label>
        <input asp-for="Email" class="form-control border-0 py-4" placeholder="Nhập email của bạn" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="font-weight-semi-bold">
            <i class="fas fa-lock text-primary mr-2"></i>Mật khẩu
        </label>
        <input asp-for="Password" class="form-control border-0 py-4" placeholder="Nhập mật khẩu của bạn" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="form-group d-flex justify-content-between align-items-center">
        <div class="custom-control custom-checkbox">
            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="rememberMe">
            <label class="custom-control-label" for="rememberMe" asp-for="RememberMe"></label>
        </div>
        <a href="#" class="text-primary">Quên mật khẩu?</a>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary btn-block border-0 py-3">
            <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
        </button>
    </div>
</form>

<div class="text-center">
    <p class="text-muted mb-0">Chưa có tài khoản?</p>
    <a asp-controller="Authentication" asp-action="Register" class="font-weight-semi-bold text-primary">
        <i class="fas fa-user-plus mr-1"></i>Đăng ký ngay
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

